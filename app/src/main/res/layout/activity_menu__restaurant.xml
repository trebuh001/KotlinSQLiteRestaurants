<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Menu_Restaurant"
        android:background="@color/main_background">
    <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/txt_menu_restaurant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_centerHorizontal="true"
            android:textSize="30sp"
            app:fontFamily="@font/muli_bold"
            android:layout_gravity="center"
            android:gravity="center"/>
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_menu"
            android:layout_below="@id/txt_menu_restaurant"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="60dp">

    </androidx.recyclerview.widget.RecyclerView>




    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="@string/add_button_dish_to_menu"
            android:textColor="#fff"
            android:textSize="30sp"
            android:onClick="Add_To_Menu"
            android:layout_alignParentBottom="true"
    />


</RelativeLayout>